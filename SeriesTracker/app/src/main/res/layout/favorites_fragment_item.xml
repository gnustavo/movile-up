<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favorites_list_view"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_spacing_large"
        android:src="@drawable/favorite_item_icon_heart" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favorites_show_title"
        android:layout_gravity="center"
        android:textSize="@dimen/default_textSize_medium"
        android:textColor="@color/default_textColor_fifth"/>

</LinearLayout>